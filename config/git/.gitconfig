[alias]
  # Add
  add-all = add --all
  add-all-tracked = add --update

  # Branch Create/Delete/List/Switch
  bc = switch --create
  bd = branch --delete
  bl = branch
  bs = switch

  # Check
  check = diff --check --staged
  check-all = "!f() { echo 'Staged:' && git diff --check && echo '(no errors)'; echo -e '\\nUnstaged:' && git diff --check --staged && echo '(no errors)'; } && f"

  # Check and Commit
  check-commit = "!f() { git check && git commit \"$@\"; } && f"

  # Diff
  d = difftool HEAD
  d-all = difftool --dir-diff HEAD
  d-commit = difftool --dir-diff
  d-staged = difftool --dir-diff --staged

  # Discard Changes
  discard = restore
  discard-all = !git restore .

  # Graph
  g = log --graph --abbrev-commit --pretty=oneline
  g-all = g --all
  g-full = log --graph --pretty=fuller --show-signature
  g-full-all = g-full --all

  # Log
  l = log --abbrev-commit --pretty=oneline
  l-full = log --pretty=fuller --show-signature

  # Resolve
  resolve = mergetool

  # Remove
  rem = restore --staged
  rem-all = reset

  # Root
  root = rev-parse --show-toplevel

  # Status
  s = status

  # Submit
  submit = push --recurse-submodules=on-demand

  # Sync
  sync = pull --rebase --prune --recurse-submodules


[commit]
  gpgSign = true


[core]
  editor = vim
  pager = delta


[delta]
  light = false
  navigate = true
  side-by-side = true


[diff]
  tool = meld


[difftool "meld"]
  cmd = meld "${LOCAL}" "${REMOTE}"


[gpg]
  format = ssh


[gpg "ssh"]
  allowedSignersFile = /home/timzwiebel/.ssh/allowed_signers


[init]
  defaultBranch = main


[merge]
  tool = meld


[mergetool "meld"]
  cmd = meld "${LOCAL}" "${BASE}" "${REMOTE}" --output "${MERGED}"


[tag]
  forceSignAnnotated = true
  gpgSign = true


